addOne : mut num -> ()
addOne n = {
  !n = (*n) + 1;
}

main : () -> any
main () = {
  mut i = 0 in
  mut seq = "1..10 = " in (
    while (*i) < 10 => (
      print "looping";
      addOne i;
      !seq = (*seq) + (if (*i) > 1 then ", " else "") + (*i);
      print ("i = " + i);
      delay 100
    );
    seq
  )
}
